{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"assets": [
			"mail/templates/**/*.hbs",
			"**/*.pem",
			"**/*.crt",
			"**/*.key"
		],
		"watchAssets": true,
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"classValidatorShim": false,
					"introspectComments": true,
					"dtoFileNameSuffix": [
						"-dto.ts",
						".entity.ts"
					]
				}
			}
		]
	}
}